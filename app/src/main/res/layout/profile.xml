<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/btn_profile"
                android:layout_gravity="top"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_profile"
                android:id="@+id/user"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/btn_profile"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:layout_toRightOf="@+id/user"
                android:layout_below="@+id/btn_profile"
                android:layout_centerVertical="true"
                android:layout_marginTop="47dp"
                android:text="@string/data_profile"
                android:id="@+id/eduser"
                android:background="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user"
                android:layout_marginTop="30dp"
                android:text="@string/pass_profile"
                android:id="@+id/psw"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnpsw"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:text="@string/data_profil"
                android:paddingTop="5dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/psw"
                android:layout_below="@+id/eduser"
                android:layout_marginLeft="50dp"
                android:background="@android:color/white"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/ic_write"
                    app:borderWidth="0dp"
                    app:elevation="6dp"
                    app:pressedTranslationZ="12dp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>