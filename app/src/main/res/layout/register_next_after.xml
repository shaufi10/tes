<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_register_2"
    tools:context="com.grinasia.transport.User.Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtInfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/info3"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/company"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spn_kind_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:textAlignment="textEnd" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutName_Company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColorHint="@android:color/white"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse">

                    <EditText
                        android:id="@+id/txtName_Company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name_company"
                        android:maxLength="45"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@android:color/white" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutAddress_Company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColorHint="@android:color/white"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse">

                    <EditText
                        android:id="@+id/txtAddress_Company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address_company"
                        android:inputType="textMultiLine"
                        android:maxLength="255"
                        android:singleLine="true"
                        android:textColor="@android:color/white" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutPhoneNumber_Company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColorHint="@android:color/white"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse">

                    <EditText
                        android:id="@+id/txtPhoneNumber_Company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_company"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColor="@android:color/white" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutAkte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColorHint="@android:color/white"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse">

                    <EditText
                        android:id="@+id/txtNumber_Akte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_akte"
                        android:inputType="text"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btn_upload_akte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/upload_file" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutNumberSIUP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColorHint="@android:color/white"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse">

                    <EditText
                        android:id="@+id/txtNumber_SIUP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_SIUP"
                        android:inputType="text"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btn_upload_SIUP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/upload_file" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutNumberTDP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColorHint="@android:color/white"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse">

                    <EditText
                        android:id="@+id/txtNumber_TDP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_TDP"
                        android:inputType="text"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btn_upload_TDP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/upload_file" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtLayoutNumberNPWP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColorHint="@android:color/white"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse">

                    <EditText
                        android:id="@+id/txtNumber_NPWP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_NPWP"
                        android:inputType="text"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btn_upload_NPWP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/upload_file" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>