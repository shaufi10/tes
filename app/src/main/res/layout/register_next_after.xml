<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_register_2"
    tools:context="">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtInfo1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:text="@string/info3"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/company"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/list_kind_company" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtInputName_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/white"
                    android:layout_marginTop="5dp"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name_company"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:id="@+id/edName_Company"
                        android:textColor="@android:color/white"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtInputAddress_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@android:color/white"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address_company"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:id="@+id/edAddress_Company" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtInputPhone_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@android:color/white"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_company"
                        android:id="@+id/edNumber_telephone_Company"
                        android:inputType="phone"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:layout_gravity="top|left"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtInputNumber_Akte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@android:color/white"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_akte"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:id="@+id/edNumber_Akte"
                        android:textColor="@android:color/white"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtInputNumberSIUP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@android:color/white"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_SIUP"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:id="@+id/edNumber_SIUP"
                        android:textColor="@android:color/white"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtInputNumberTDP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@android:color/white"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_TDP"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:textColor="@android:color/white"
                        android:id="@+id/edNumber_TDP"
                        android:layout_gravity="top|left"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtInputNumberNPWP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@android:color/white"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_NPWP"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:id="@+id/edNumber_NPWP"
                        android:textColor="@android:color/white"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>