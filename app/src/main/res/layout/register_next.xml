<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grinasia.transport.Fragments.RegisterProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="@string/info2"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:textSize="25sp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtLayoutFirstName_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textColorHint="@android:color/white"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/firstName"
                    android:maxLines="1"
                    android:maxLength="45"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:id="@+id/txtFirstName_register"
                    android:textColor="@android:color/white" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtLayoutLastName_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textColorHint="@android:color/white"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/lastName"
                    android:maxLines="1"
                    android:maxLength="45"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:id="@+id/txtLastName_register"
                    android:textColor="@android:color/white" />

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spnGender1"
                android:layout_marginTop="25dp"
                android:padding="13dp"
                android:background="@android:color/white"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtLayoutAddress_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textColorHint="@android:color/white"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/address_person"
                    android:inputType="textMultiLine"
                    android:maxLength="255"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:id="@+id/txtAddress_register" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TextLayoutDOB"
                android:layout_marginTop="25dp"
                android:textColorHint="@android:color/white"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDOB_register"
                    android:hint="@string/date_of_birth"
                    android:inputType="none"
                    android:singleLine="true"
                    android:editable="false"
                    android:cursorVisible="false"
                    android:textColor="@android:color/white"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtLayoutPhoneNumber_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textColorHint="@android:color/white"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/number_telephone"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:id="@+id/txtNumberPhone_register"
                    android:inputType="phone"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtLayoutSIM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textColorHint="@android:color/white"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium.Inverse">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/number_SIM"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:inputType="phone"
                    android:id="@+id/txtSIM_register"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>